<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<CheckBox android:id="@+id/checkbox" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="checked"
		android:onClick="onCheckboxClick" />
	<RadioGroup android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<RadioButton android:id="@+id/radio_red"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Red" android:onClick="onRadioClick" />
		<RadioButton android:id="@+id/radio_blue"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Blue" android:onClick="onRadioClick" />
		<ToggleButton android:id="@+id/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Vibrate on"
        android:textOff="Vibrate off" android:onClick="onToggleClick" />
	</RadioGroup>
</LinearLayout>